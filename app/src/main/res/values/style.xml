<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material Input layout-->
    <style name="InputEditTextCustomStyle.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">@dimen/text_input_layout_stroke</item>
        <item name="shapeAppearance">@style/Coffee.ShapeAppearance.TextInputLayout</item>
    </style>


    <style name="CustomButton" parent="Widget.MaterialComponents.Button" >
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/Coffee.ShapeAppearance.Button</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Coffee.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="tint">@color/Coffee_200</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        ....
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>







</resources>